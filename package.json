{
  "name": "fastify-api-typescript-boilerplate",
  "version": "1.0.0",
  "description": "Fastify API framework with TypesScript support",
  "main": "src/index.ts",
  "engines": {
    "node": ">=20.5.0"
  },
  "scripts": {
    "prebuild": "npm run lint",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node -r dotenv-flow/config dist/index.js",
    "start:watch": "NODE_ENV=development nodemon -r dotenv-flow/config",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "eslint:fix": "eslint --fix",
    "test": "NODE_ENV=test jest test",
    "test:coverage": "NODE_ENV=test jest --collectCoverageFrom=src/**/*.{js,ts} --coverage"
  },
  "keywords": [
    "fastify",
    "typescript",
    "boilerplate"
  ],
  "author": "Vladimir Poplavskij <float45@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@fastify/routes": "^4.1.1",
    "@sinclair/typebox": "^0.23.5",
    "dotenv-flow": "^3.3.0",
    "fastify": "^3.29.5",
    "fastify-oas": "^3.0.8",
    "fastify-plugin": "^3.0.1",
    "pino": "^7.11.0",
    "ts-node": "^10.9.1",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/dotenv-flow": "^3.3.1",
    "@types/jest": "^27.5.2",
    "@types/node": "^17.0.45",
    "@types/pino": "^7.0.5",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^27.5.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-jest": "^27.1.5"
  }
}
