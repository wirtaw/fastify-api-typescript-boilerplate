{
  "name": "fastify-api-typescript-boilerplate",
  "version": "1.0.0",
  "description": "Fastify API framework with TypesScript support",
  "main": "src/index.ts",
  "engines": {
    "node": ">=14.10.0"
  },
  "scripts": {
    "prebuild": "npm run lint",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node -r dotenv-flow/config dist/index.js",
    "start:watch": "NODE_ENV=development nodemon -r dotenv-flow/config",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "eslint:fix": "eslint --fix"
  },
  "keywords": [
    "fastify",
    "typescript",
    "boilerplate"
  ],
  "author": "Vladimir Poplavskij <float45@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "dotenv-flow": "^3.2.0",
    "fastify": "^3.28.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.6.3"
  },
  "devDependencies": {
    "@types/node": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.15"
  }
}
